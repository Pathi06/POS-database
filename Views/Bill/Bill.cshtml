@model EchoPOS.Models.BillViewModel

<!-- Bootstrap CSS & JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <h2>Bill Details</h2>
    <table class="table table-bordered">
        <tr><th>Bill ID:</th><td>@Model.Bill.Bill_Id</td></tr>
        <tr><th>Order ID:</th><td>@Model.Bill.Order_Id</td></tr>
        <tr><th>Tax:</th><td>@Model.Bill.Tax_Percentage %</td></tr>
        <tr><th>Discount:</th><td>@Model.Bill.Discount_Value ₹</td></tr>
        <tr><th>Total:</th><td>@Model.Bill.Total ₹</td></tr>
    </table>

    <h3>Order Summary</h3>
    <table class="table table-bordered">
        <tr><th>Status</th><td>@Model.OrderDetail.Order_Status</td></tr>
        <tr><th>Subtotal</th><td>@Model.OrderDetail.Sub_Total</td></tr>
        <tr><th>Payment Status</th><td>@Model.OrderDetail.Payment_Status_Name</td></tr>
    </table>

    <h3>Items</h3>

    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (Model != null && Model.OrderItemSummaries != null && Model.OrderItemSummaries.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItemSummaries)
                {
                    <tr>
                        <td>@item.Menu_Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>@(item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-warning">No items to show.</div>
    }

    @if (Model.OrderDetail.Payment_Status_Name != "Paid")
    {
        <!-- Pay Now + Back Button Group -->
        <div class="mt-4 text-end">
            <button class="btn btn-success px-5 py-2 mb-2" style="border-radius: 6px;" data-bs-toggle="modal" data-bs-target="#paymentModal">
                Pay Now
            </button><br />
            <a class="btn btn-secondary px-4 py-2" style="border-radius: 6px;" href="@Url.Action("Index", "Bill")">
                Back
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-success text-center mt-4">This order is already <strong>paid</strong>.</div>
        <div class="text-end">
            <a class="btn btn-secondary px-4 py-2" style="border-radius: 6px;" href="@Url.Action("Index", "Cashier")">
                Back
            </a>
        </div>
    }
</div>

<!-- Modal with 3 Payment Options -->
<div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Select Payment Method</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="PayFromDetails" asp-controller="Bill">
                <input type="hidden" name="orderId" value="@Model.Bill.Order_Id" />
                <div class="modal-body text-center" id="modal-buttons">
                    <button type="submit" name="method" value="Cash" class="btn btn-outline-primary m-2 w-75"
                            onclick="return confirm('Are you sure you want to pay with Cash?')">
                        Cash
                    </button>
                    <button type="submit" name="method" value="UPI" class="btn btn-outline-success m-2 w-75"
                            onclick="return confirm('Are you sure you want to pay with UPI?')">
                        UPI
                    </button>
                    <button type="submit" name="method" value="Card" class="btn btn-outline-dark m-2 w-75"
                            onclick="return confirm('Are you sure you want to pay with Card?')">
                        Card
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Spinner Script -->
<script>
    const buttons = document.querySelectorAll("#modal-buttons button");

    buttons.forEach(btn => {
        btn.addEventListener("click", function () {
            btn.innerHTML = `<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Processing...`;
        });
    });
</script>
