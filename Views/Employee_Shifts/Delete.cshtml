@model EchoPOS.Models.Employee_Shifts
@{
    Layout = null;
    ViewData["Title"] = "Delete Employee Shift";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(to right, #dc3545, #007bff);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }


        .container-box {
            max-width: 600px;
            margin: auto;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            color: black;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
        }

        dl.row dt {
            font-weight: 600;
        }

        dl.row dd {
            margin-bottom: 10px;
        }

        .btn-group {
            display: flex;
            justify-content: flex-start;
            gap: 15px;
            margin-top: 20px;
        }

        @@media (max-width: 576px) {
            .btn-group {
                flex-direction: column;
                gap: 10px;
            }

            button, .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container-box">
        <h2><i class="bi bi-trash3-fill text-danger"></i> Delete Employee Shift</h2>

        <p>Are you sure you want to delete this shift?</p>

        <div>
            <dl class="row">
                <dt class="col-sm-3">User ID</dt>
                <dd class="col-sm-9">@Model.User_Id</dd>

                <dt class="col-sm-3">Shift Start</dt>
                <dd class="col-sm-9">@Model.Shift_Start</dd>

                <dt class="col-sm-3">Shift End</dt>
                <dd class="col-sm-9">@Model.Shift_End</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>
            </dl>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Shift_Id" />
            <div class="btn-group">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-x-circle-fill"></i> Delete
                </button>
                <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                </a>
            </div>
        </form>
    </div>
</body>
</html>
