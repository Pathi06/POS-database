@model EchoPOS.Models.Employee_Shifts
@{
    Layout = null;
    ViewData["Title"] = "Edit Employee Shift";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(to right, #dc3545, #007bff);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }


        .container-box {
            max-width: 600px;
            margin: auto;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            color: black;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-group {
            display: flex;
            justify-content: flex-start;
            gap: 15px;
        }

        @@media (max-width: 576px) {
            .btn-group {
                flex-direction: column;
                gap: 10px;
            }

            button, .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container-box">
        <h2><i class="bi bi-pencil-square text-primary"></i> Edit Employee Shift</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Shift_Id" />

            <div class="form-group">
                <label>User</label>
                <select asp-for="User_Id" asp-items="ViewBag.User_Id" class="form-control" id="userDropdown">
                    <option value="">-- Select User --</option>
                </select>
            </div>

            <div class="form-group">
                <label>Role</label>
                <input type="text" asp-for="Role" id="roleInput" class="form-control" readonly name="Role" />
            </div>

            <div class="form-group">
                <label>Shift Start</label>
                <input asp-for="Shift_Start" type="datetime-local" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Shift End</label>
                <input asp-for="Shift_End" type="datetime-local" class="form-control" required />
            </div>

            <div class="btn-group mt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle-fill"></i> Save
                </button>
                <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                </a>
            </div>
        </form>
    </div>

    <script>
        var userRoles = @Html.Raw(Json.Serialize(ViewBag.UserRoles));

        document.getElementById("userDropdown").addEventListener("change", function () {
            var selectedUserId = this.value;
            document.getElementById("roleInput").value = userRoles[selectedUserId] || "";
        });

        // Pre-fill the role field on load
        document.getElementById("roleInput").value = userRoles[document.getElementById("userDropdown").value] || "";
    </script>
</body>
</html>
