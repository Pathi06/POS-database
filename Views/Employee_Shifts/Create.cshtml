@model EchoPOS.Models.Employee_Shifts
@{
    Layout = null;
    ViewData["Title"] = "Create Employee Shift";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #dc3545, #007bff);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        .container-box {
            max-width: 600px;
            width: 100%;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            color: black;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        button {
            width: 100px;
        }

        .btn-group {
            display: flex;
            justify-content: flex-start;
            gap: 15px;
        }

        @@media (max-width: 576px) {
            .btn-group {
                flex-direction: column;
                gap: 10px;
            }

            button, .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="container-box">
            <h2><i class="bi bi-person-badge me-2"></i> Create Employee Shift</h2>

            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label>User</label>
                    <select asp-for="User_Id" asp-items="ViewBag.User_Id" class="form-control" id="userDropdown">
                        <option value="">-- Select User --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Role</label>
                    <select asp-for="Role" class="form-control">
                        <option value="">-- Select Role --</option>
                        <option value="admin">Admin</option>
                        <option value="waiter">Waiter</option>
                        <option value="cashier">Cashier</option>
                        <option value="chef">Chef</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Shift Start</label>
                    <input asp-for="Shift_Start" type="datetime-local" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Shift End</label>
                    <input asp-for="Shift_End" type="datetime-local" class="form-control" required />
                </div>

                <div class="btn-group mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check2-circle me-1"></i> Create
                    </button>
                    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        var userRoles = @Html.Raw(Json.Serialize(ViewBag.UserRoles));

        document.getElementById("userDropdown").addEventListener("change", function () {
            var selectedUserId = this.value;
            // Optional JS logic
        });
    </script>
</body>
</html>
