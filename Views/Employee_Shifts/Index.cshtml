@model IEnumerable<EchoPOS.Models.Employee_Shifts>

<h2>Employee Shifts</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Shift</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Shift Start</th>
            <th>Shift End</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User_Id</td>
                <td>@item.Shift_Start</td>
                <td>@item.Shift_End</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Shift_Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Shift_Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Shift_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
