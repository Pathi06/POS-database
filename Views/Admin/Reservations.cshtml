@model IEnumerable<EchoPOS.Models.Reservations>
@{
    Layout = null;
}

<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<h2 class="fw-bold text-center mt-4">
    <i class="bi bi-journal-check"></i> Reservations Management
</h2>

<div class="text-center mb-4">
    <a asp-action="Create" asp-controller="Reservations" class="btn btn-primary">
        <i class="bi bi-calendar-plus-fill"></i> Add New Reservation
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>User Name</th>
            <th>Table Name</th>
            <th>Reservation Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Name</td>
                <td>@reservation.Table_Number</td>
                <td>@reservation.Reservation_Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <span class="badge @(reservation.Status == "confirmed" ? "bg-success" : (reservation.Status == "canceled" ? "bg-danger" : "bg-warning"))">
                        @reservation.Status
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Reservations" asp-route-id="@reservation.Reservation_Id" class="btn btn-warning btn-sm me-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-controller="Reservations" asp-route-id="@reservation.Reservation_Id" class="btn btn-danger btn-sm me-1">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                    <a asp-action="Details" asp-controller="Reservations" asp-route-id="@reservation.Reservation_Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye-fill"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
