@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Menu Management</title>

    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet" />

    <!-- jQuery and Bootstrap JS -->
    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")"></script>

    <style>
        /* Your CSS styles unchanged */
        .img-hover-wrapper {
            position: relative;
            overflow: hidden;
        }

        .overlay-buttons {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.75);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
            z-index: 1;
        }

        .img-hover-wrapper:hover .overlay-buttons {
            opacity: 1;
        }

        .card-img-top {
            transition: transform 0.3s ease;
        }

        .img-hover-wrapper:hover .card-img-top {
            transform: scale(1.03);
        }

        .overlay-buttons a {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            padding: 6px 12px;
            font-size: 14px;
            font-weight: 500;
            color: white;
            border-radius: 0;
            text-decoration: none;
            transition: background-color 0.2s ease;
            user-select: none;
        }

            .overlay-buttons a.btn-warning {
                background-color: #ffc107;
            }

                .overlay-buttons a.btn-warning:hover {
                    background-color: #e0a800;
                    color: #212529;
                }

            .overlay-buttons a.btn-danger {
                background-color: #dc3545;
            }

                .overlay-buttons a.btn-danger:hover {
                    background-color: #bb2d3b;
                }

            .overlay-buttons a.btn-info {
                background-color: #0dcaf0;
            }

                .overlay-buttons a.btn-info:hover {
                    background-color: #0ab9d0;
                }

        .card-body i {
            font-size: 14px;
        }

        .card-title i {
            font-size: 16px;
        }

        .card {
            background-color: #ffffff;
            transition: box-shadow 0.2s;
        }

            .card:hover {
                box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
            }

        .position-relative .bi-search {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            font-size: 18px;
            color: #aaa;
            pointer-events: none;
        }
    </style>
</head>
<body>

    <div class="container-fluid p-4">

        <div class="text-center mb-4">
            <h1 class="mb-3">
                <i class="bi bi-journal-food me-2"></i> Menu Management
            </h1>
            <a asp-action="Create" asp-controller="Menu" class="btn btn-success">
                <i class="bi bi-plus-circle-fill"></i> Add New Item
            </a>
        </div>

        <div class="mb-4 position-relative">
            <input type="text" id="menuSearch" class="form-control ps-5 shadow-sm" placeholder="Search for menu items..." style="font-size: 16px; padding-left: 40px;" />
            <i class="bi bi-search"></i>
        </div>

        <div class="row">
            @foreach (var item in Model.MenuItems)
            {
                <div class="col-md-4 mb-4" data-name="@item.Name.ToLower()">
                    <div class="card h-100 shadow rounded-3 border-0">
                        <div class="img-hover-wrapper position-relative">
                            <img src="@item.Image_Url" class="card-img-top rounded-top" style="height: 180px; object-fit: cover;" alt="@item.Name" />
                            <div class="overlay-buttons">
                                <a href="@Url.Action("Edit", "Menu", new { id = item.Menu_Item_Id })" class="btn btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", "Menu", new { id = item.Menu_Item_Id })" class="btn btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <a href="@Url.Action("Details", "Menu", new { id = item.Menu_Item_Id })" class="btn btn-info" title="View Details">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-dark">
                                <i class="bi bi-hamburger me-1 text-secondary"></i> @item.Name
                            </h6>
                            <p class="text-muted small mb-1">
                                <i class="bi bi-text-left me-1 text-muted"></i> @item.Description
                            </p>
                            <p class="mb-1">
                                <i class="bi bi-currency-rupee text-success me-1"></i>
                                <strong>@item.Price</strong>
                            </p>
                            <p>
                                @if (item.Availability)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Available
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle me-1"></i>Unavailable
                                    </span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        document.getElementById('menuSearch').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            document.querySelectorAll('[data-name]').forEach(el => {
                el.style.display = el.getAttribute('data-name').includes(searchTerm) ? '' : 'none';
            });
        });
    </script>

</body>
</html>
