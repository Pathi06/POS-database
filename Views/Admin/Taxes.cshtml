@model IEnumerable<EchoPOS.Models.Taxes>

@{
    ViewData["Title"] = "Taxes List";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="fw-bold text-center mb-4">
            <i class="bi bi-receipt-cutoff me-2"></i>
            @ViewData["Title"]
        </h2>

        <div class="text-center mb-4">
            <a asp-action="Create" asp-controller="Taxes" class="btn btn-success">
                <i class="bi bi-plus-circle-fill me-1"></i> Create New Tax
            </a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Tax Name</th>
                    <th>Percentage</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tax in Model)
                {
                    <tr>
                        <td>@tax.Name</td>
                        <td>@tax.Percentage%</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Taxes" asp-route-id="@tax.Tax_Id" class="btn btn-warning btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-controller="Taxes" asp-route-id="@tax.Tax_Id" class="btn btn-info btn-sm me-1">
                                <i class="bi bi-eye-fill"></i> Details
                            </a>
                            <a asp-action="Delete" asp-controller="Taxes" asp-route-id="@tax.Tax_Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this tax?');">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
