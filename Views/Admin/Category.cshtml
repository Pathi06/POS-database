@model IEnumerable<EchoPOS.Models.Category>

@{
    ViewData["Title"] = "Category";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Category Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <style>
        body {
            background: linear-gradient(to right, #1a2a6c, #b21f1f);
            color: white;
            font-family: 'Segoe UI', sans-serif;
            padding: 20px;
        }

        h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 30px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        }

        .btn-success {
            background-color: #ffffff;
            color: #28a745;
            font-weight: 600;
            border: none;
        }

            .btn-success:hover {
                background-color: #e9ecef;
            }

        .category-card {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s ease-in-out;
            color: #333;
        }

            .category-card:hover {
                transform: scale(1.02);
            }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .category-icon {
            font-size: 3rem;
            color: #b21f1f;
        }

        .action-buttons a {
            min-width: 80px;
        }

        .container {
            max-width: 1140px;
        }
    </style>
</head>
<body>
    <h2><i class="bi bi-tags-fill me-2"></i>Category Management</h2>

    <div class="text-center mb-4">
        <a asp-action="Create" asp-controller="Category" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i> Create New Category
        </a>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 d-flex align-items-stretch mb-4">
                    <div class="card category-card w-100">
                        <a href="javascript:void(0);" onclick="loadMenu(@item.Category_Id);" class="text-decoration-none text-dark">
                            <div class="card-body text-center">
                                <i class="bi bi-tags-fill category-icon mb-3"></i>
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </a>

                        <hr />
                        <div class="d-flex justify-content-between px-3 pb-3 action-buttons">
                            <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Category_Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-fill"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Category_Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this category?');">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                            <a asp-action="Details" asp-controller="Category" asp-route-id="@item.Category_Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye-fill"></i>View
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div id="menuItems" class="mt-4"></div>
    </div>

    <script>
        function loadMenu(categoryId) {
            $.ajax({
                url: '/Menu/GetMenuByCategory',
                type: 'GET',
                data: { categoryId: categoryId },
                success: function (data) {
                    $('#menuItems').html(data);
                },
                error: function (xhr, status, error) {
                    console.error('AJAX error:', xhr.responseText);
                    alert('Failed to load menu items.');
                }
            });
        }
    </script>
</body>
</html>
