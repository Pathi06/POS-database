@model IEnumerable<EchoPOS.Models.Suppliers>

@{
    ViewData["Title"] = "Suppliers List";
    Layout = null;
}

<!-- Bootstrap CSS and Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<h2 class="text-center mt-4">
    <i class="bi bi-people-fill"></i> Suppliers List
</h2>

<a asp-action="Create" asp-controller="Suppliers" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Add New Supplier
</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Supplier_Id</td>
                <td>@supplier.Name</td>
                <td>@supplier.Contact</td>
                <td>@supplier.Email</td>
                <td>@supplier.Address</td>
                <td>
                    <a asp-action="Edit" asp-controller="Suppliers" asp-route-id="@supplier.Supplier_Id" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-controller="Suppliers" asp-route-id="@supplier.Supplier_Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                    <a asp-action="Details" asp-controller="Suppliers" asp-route-id="@supplier.Supplier_Id" class="btn btn-sm btn-info">
                        <i class="bi bi-info-circle"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
