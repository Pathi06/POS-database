@model IEnumerable<EchoPOS.Models.Users>
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold">
        <i class="bi bi-people-fill me-2"></i> Users Management
    </h2>
    <a asp-action="Create" asp-controller="Users" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill"></i> Create New
    </a>
</div>

<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="bi bi-person-circle me-1"></i> @item.Name
                    </h5>
                    <p class="card-text">
                        <strong><i class="bi bi-envelope-fill me-1"></i>Email:</strong> @item.Email <br />
                        <strong><i class="bi bi-shield-lock-fill me-1"></i>Role:</strong> @item.Role <br />
                        <strong><i class="bi bi-telephone-fill me-1"></i>Phone:</strong> @item.Phone <br />
                    </p>
                    <div class="mt-auto d-flex justify-content-between">
                        <a asp-action="Edit" asp-controller="Users" asp-route-id="@item.User_Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-controller="Users" asp-route-id="@item.User_Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye-fill"></i> Details
                        </a>
                        <a asp-action="Delete" asp-controller="Users" asp-route-id="@item.User_Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
