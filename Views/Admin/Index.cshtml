
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(180deg, #1a2a6c, #b21f1f);
        overflow: hidden;
    }

    .page-layout {
        display: flex;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
    }

    .sidebar {
        width: 260px;
        background: linear-gradient(180deg, #1a2a6c, #b21f1f); /* Gradient colors */
        color: white;
        padding: 20px 10px;
        height: 100vh;
        overflow-y: auto;
    }

    .sidebar-button {
        display: flex;
        align-items: center;
        padding: 12px 16px;
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        border: none;
        border-radius: 6px;
        margin-bottom: 10px;
        text-align: left;
        width: 100%;
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
    }

        .sidebar-button i {
            margin-right: 10px;
            font-size: 1.1rem;
        }

        .sidebar-button:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: translateX(5px);
        }

    .sidebar a {
        color: white;
        text-decoration: none;
        display: block;
        padding: 12px 16px;
        margin-top: 20px;
        background-color: #dc3545;
        border-radius: 6px;
        transition: background 0.3s ease;
    }

        .sidebar a:hover {
            background-color: #c82333;
            color: #fff;
        }

    .content {
        flex: 1;
        background: linear-gradient(180deg, #1a2a6c, #b21f1f);
        padding: 30px;
        overflow-y: auto;
    }

    #content-display {
        background: linear-gradient(180deg, #1a2a6c, #b21f1f); /* Match sidebar gradient */
        border-radius: 8px;
        padding: 30px;
        color: white; /* Ensure text is readable */
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
        min-height: 300px;
    }

    h2 {
        font-weight: 600;
    }
</style>

<body>
    <div class="page-layout">

        <div class="sidebar">
@*             <button class="sidebar-button" onclick="loadSection('@Url.Action("ViewBill", "Admin")')">
                <i class="bi bi-grid-3x3-gap"></i> Bills
            </button> *@
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Tables", "Admin")')">
                <i class="bi bi-grid-3x3-gap"></i> Tables
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Category", "Admin")')">
                <i class="bi bi-tags"></i> Category
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Menu", "Admin")')">
                <i class="bi bi-card-list"></i> Menu
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Users", "Admin")')">
                <i class="bi bi-people"></i> Users
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Reservations", "Admin")')">
                <i class="bi bi-calendar-check"></i> Reservations
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Suppliers", "Admin")')">
                <i class="bi bi-truck"></i> Supplier
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Inventory", "Admin")')">
                <i class="bi bi-boxes"></i> Inventory
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Employee_Shifts", "Admin")')">
                <i class="bi bi-clock-history"></i> Employee Shifts
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Discounts", "Admin")')">
                <i class="bi bi-percent"></i> Discounts
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Taxes", "Admin")')">
                <i class="bi bi-receipt"></i> Taxes
            </button>
@*             <button class="sidebar-button" onclick="loadSection('@Url.Action("Index", "AuditLog")')">
                <i class="bi bi-journal-text"></i> Audit Log
            </button> 
 *@
            <button class="sidebar-button" onclick="loadSection('@Url.Action("OrderHistory", "Admin")')">
                <i class="bi bi-clock"></i> Order History
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("OrdersPending", "Admin")')">
                <i class="bi bi-hourglass-split"></i> Orders Pending
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("OrderReady", "Admin")')">
                <i class="bi bi-check-circle"></i> Order Ready
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("Bill", "Admin")')">
                <i class="bi bi-receipt"></i>Bill Pending To Pay
            </button>
            <button class="sidebar-button" onclick="loadSection('@Url.Action("BillHistory", "Admin")')">
                <i class="bi bi-receipt"></i> BillHistory
            </button>


            <a href="@Url.Action("Index", "Login")" class="btn btn-danger w-100 d-flex align-items-center justify-content-center mt-4">
                <i class="bi bi-box-arrow-left me-2"></i> Logout
            </a>
        </div>

        <div class="content">
            <div id="content-display">
                <h1>Welcome To Admin DashBoard!</h1>
            </div>
        </div>
    </div>

    <script>
        function loadSection(url) {
            $("#content-display").html(`
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `);

            $.get(url)
                .done(function(data) {
                    $("#content-display").html(data);
                })
                .fail(function(xhr) {
                    $("#content-display").html(`
                        <div class="alert alert-danger">
                            Error loading content. ${xhr.status} - ${xhr.statusText}
                        </div>
                    `);
                });
        }
    </script>
</body>
