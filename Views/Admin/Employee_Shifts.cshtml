@model IEnumerable<EchoPOS.Models.Employee_Shifts>
@{
    Layout = null;
    ViewBag.Title = "Employee Shifts";
}

<!-- Make sure to include Bootstrap CSS and Bootstrap Icons CSS somewhere in your layout or page head -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Centered Title with icon -->
<h2 class="fw-bold text-center mt-4 mb-3">
    <i class="bi bi-clock-history me-2"></i> Employee Shifts
</h2>

<!-- Create Button -->
<div class="text-center mb-4">
    <a asp-action="Create" asp-controller="Employee_Shifts" class="btn btn-success">
        <i class="bi bi-plus-circle-fill me-1"></i> Create New Shift
    </a>
</div>

<!-- Employee Shifts Table -->
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>User</th>
            <th>Shift Start</th>
            <th>Shift End</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User_Id</td>
                <td>@item.Shift_Start.ToString("g")</td>
                <td>@item.Shift_End.ToString("g")</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Edit" asp-controller="Employee_Shifts" asp-route-id="@item.Shift_Id" class="btn btn-warning btn-sm me-1" title="Edit Shift">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Details" asp-controller="Employee_Shifts" asp-route-id="@item.Shift_Id" class="btn btn-info btn-sm me-1" title="View Details">
                        <i class="bi bi-eye-fill"></i> Details
                    </a>
                    <a asp-action="Delete" asp-controller="Employee_Shifts" asp-route-id="@item.Shift_Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this shift?');" title="Delete Shift">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
