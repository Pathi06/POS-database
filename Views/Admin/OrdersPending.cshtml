@model IEnumerable<EchoPOS.Models.Orders>
@{
    Layout = null;
}

<!-- Include Bootstrap 5 CSS and Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">
        <i class="bi bi-journal-check me-2"></i>Kitchen Pending Orders
    </h2>

    <!-- Sort Filter -->
    <div class="mb-3 d-flex align-items-center justify-content-center">
        <label for="orderFilter" class="form-label fw-bold me-2 mb-0">Sort Orders By:</label>
        <select id="orderFilter" class="form-select w-auto" onchange="sortOrders()">
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
        </select>
    </div>

    <!-- Orders Grid -->
    <div class="row" id="orderList">
        @foreach (var order in Model)
        {
            <div class="col-md-4 mb-4" data-order-id="@order.Order_Id" data-created="@order.Created_At.ToString("o")">
                <div class="card shadow-sm border-0 h-100 rounded-4" style="background-color: #fff8f0;">
                    <div class="card-body d-flex flex-column justify-content-between">

                        <!-- Table Info -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title fw-bold text-dark mb-0">
                                <i class="bi bi-table me-2"></i>Table: @order.Table_Id
                            </h5>
                            <span class="badge status-badge @(order.Order_Status switch {
                                "pending" => "bg-warning text-dark",
                                "in process" => "bg-primary text-white",
                                "ready" => "bg-success text-white",
                                _ => "bg-secondary text-white"
                            }) text-uppercase fw-semibold">
                                @order.Order_Status
                            </span>
                        </div>

                        <div class="text-muted mb-3" style="font-size: 0.9rem;">
                            <i class="bi bi-clock-history me-1"></i>Created: @order.Created_At.ToString("g")
                        </div>

                        <!-- Mark Order In Process -->
                        <div class="text-end mb-3">
                            <button class="btn btn-outline-primary btn-sm" onclick="markOrderInProcess(@order.Order_Id)">
                                <i class="bi bi-arrow-repeat me-1"></i>Mark In Process
                            </button>
                        </div>

                        <!-- Order Items -->
                        <div class="order-items overflow-auto" style="max-height: 200px;">
                            @if (order.OrderItems != null && order.OrderItems.Any())
                            {
                                @foreach (var item in order.OrderItems)
                                {
                                    <div class="p-3 mb-2 rounded d-flex justify-content-between align-items-center"
                                         style="background-color: #ffe8cc;"
                                         data-order-item-id="@item.Order_Item_Id">

                                        <div>
                                            <div class="fw-bold">@item.Menu_Item_Name</div>
                                            <div>Qty: @item.Quantity</div>
                                            @if (!string.IsNullOrEmpty(item.Special_Instructions))
                                            {
                                                <div class="text-muted fst-italic small">Note: @item.Special_Instructions</div>
                                            }
                                        </div>

                                        <button class="btn btn-outline-warning btn-sm"
                                                onclick="updateItemStatus(@item.Order_Item_Id, 'ready')"
                                                title="Mark as Ready">
                                            <i class="bi bi-check2-circle"></i> Ready
                                        </button>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted text-center">No items found.</p>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Styles -->
<style>
    .card:hover {
        transform: scale(1.02);
        transition: 0.3s ease-in-out;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.12);
    }

    .status-badge {
        font-size: 0.85rem;
        padding: 0.35em 0.65em;
        border-radius: 0.5rem;
    }

    .btn-outline-primary {
        border-color: #0d6efd;
        color: #0d6efd;
    }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: white;
        }

    .btn-outline-warning {
        border-color: #fd7e14;
        color: #fd7e14;
    }

        .btn-outline-warning:hover {
            background-color: #fd7e14;
            color: white;
        }
</style>

<!-- Scripts -->
<script>
    function sortOrders() {
        const filter = document.getElementById('orderFilter').value;
        const orderList = document.getElementById('orderList');
        const cards = Array.from(orderList.children);

        cards.sort((a, b) => {
            const dateA = new Date(a.dataset.created);
            const dateB = new Date(b.dataset.created);
            return filter === 'newest' ? dateB - dateA : dateA - dateB;
        });

        cards.forEach(card => orderList.appendChild(card));
    }

    document.addEventListener('DOMContentLoaded', sortOrders);

    function markOrderInProcess(orderId) {
        $.post('/KitchenDashBoard/MarkOrderInProcess', { orderId }, function (res) {
            if (res.success) {
                const card = $(`[data-order-id='${orderId}']`);
                card.find('.status-badge')
                    .removeClass('bg-warning bg-secondary text-dark')
                    .addClass('bg-primary text-white')
                    .text('in process');
            } else {
                alert('Failed to mark as in process: ' + res.message);
            }
        });
    }

    function updateItemStatus(orderItemId, orderitemstatus) {
        $.post('/KitchenDashBoard/UpdateOrderItemStatus', { orderItemId, orderitemstatus }, function (res) {
            if (res.success) {
                const itemCard = $(`[data-order-item-id='${orderItemId}']`);
                const orderCard = itemCard.closest('[data-order-id]');

                itemCard.fadeOut(() => {
                    itemCard.remove();

                    // Check if all items are ready
                    const remainingItems = orderCard.find('[data-order-item-id]');
                    if (remainingItems.length === 0) {
                        const orderId = orderCard.data('order-id');
                        $.post('/KitchenDashBoard/MarkOrderCompleted', { orderId }, function (orderRes) {
                            if (orderRes.success) {
                                orderCard.fadeOut(() => orderCard.remove());
                            } else {
                                alert('Failed to complete order: ' + orderRes.message);
                            }
                        });
                    }
                });
            } else {
                alert('Item status update failed: ' + res.message);
            }
        });
    }
</script>
