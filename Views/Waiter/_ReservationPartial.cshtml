@model IEnumerable<Reservations>

@{
    ViewBag.Title = "Reservations";
    Layout = null;  // If you want to use a full layout, remove this line
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">
            <i class="bi bi-calendar-check-fill me-2"></i>Reservations
        </h2>

        <div class="text-end mb-3">
            <a asp-controller="Reservations" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Add New Reservation
            </a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>User Name</th>
                    <th>Table Name</th>
                    <th>Reservation Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.Name</td>
                        <td>@reservation.Table_Number</td>
                        <td>@reservation.Reservation_Date.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <span class="badge @(reservation.Status == "confirmed" ? "bg-success" : (reservation.Status == "canceled" ? "bg-danger" : "bg-warning"))">
                                @reservation.Status
                            </span>
                        </td>
                        <td>
                            <a asp-controller="Reservations" asp-action="Edit" asp-route-id="@reservation.Reservation_Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square me-1"></i>Edit
                            </a>
                            <a asp-controller="Reservations" asp-action="Details" asp-route-id="@reservation.Reservation_Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                            <a asp-controller="Reservations" asp-action="Delete" asp-route-id="@reservation.Reservation_Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash me-1"></i>Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
