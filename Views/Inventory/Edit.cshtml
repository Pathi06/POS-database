@model Inventory

@{
    ViewData["Title"] = "Edit Inventory";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #dc3545, #007bff);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .edit-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .card {
            width: 100%;
            max-width: 600px;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            color: #000;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
            gap: 15px;
            margin-top: 25px;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="edit-container">
        <div class="card">
            <h2>
                <i class="bi bi-pencil-square me-2 text-success"></i> Edit Inventory
            </h2>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="InventoryID" />

                <div class="form-group">
                    <label>Product Name</label>
                    <input asp-for="ProductName" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Quantity</label>
                    <input asp-for="Quantity" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Price</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                </div>

                <div class="form-group">
                    <label>Supplier</label>
                    <select asp-for="Supplier_ID" asp-items="ViewBag.Suppliers" class="form-control">
                        <option value="">Select Supplier</option>
                    </select>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn btn-success w-50">
                        <i class="bi bi-check-lg me-2"></i> Update
                    </button>
                    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary w-50">
                        <i class="bi bi-arrow-left-circle me-2"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
