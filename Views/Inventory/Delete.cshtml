@model Inventory

@{
    ViewData["Title"] = "Delete Inventory";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #dc3545, #007bff);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .delete-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .card {
            width: 100%;
            max-width: 600px;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            color: #000;
        }

        h2, h4 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .btn-group {
            display: flex;
            justify-content: space-between;
            gap: 15px;
            margin-top: 25px;
        }

        .info p {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="delete-container">
        <div class="card">
            <h2>
                <i class="bi bi-trash3-fill me-2 text-danger"></i> Delete Inventory
            </h2>
            <h4>Are you sure you want to delete this inventory?</h4>

            <div class="info">
                <p><strong>Product Name:</strong> @Model.ProductName</p>
                <p><strong>Quantity:</strong> @Model.Quantity</p>
                <p><strong>Price:</strong> @Model.Price</p>
                <p><strong>Supplier ID:</strong> @Model.Supplier_ID</p>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="InventoryID" />
                <div class="btn-group">
                    <button type="submit" class="btn btn-danger w-50">
                        <i class="bi bi-trash-fill me-2"></i> Delete
                    </button>
                    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary w-50">
                        <i class="bi bi-arrow-left-circle me-2"></i> Back To List
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
