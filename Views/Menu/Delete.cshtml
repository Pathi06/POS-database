@model EchoPOS.Models.Menu

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Delete Menu Item</title>
    <!-- Font Awesome CDN for icons -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <style>
        body {
            min-height: 100vh; /* full viewport height */
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #dc3545, #007bff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-card {
            background: #fff;
            padding: 20px 30px; /* reduced padding for simpler look */
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px; /* smaller max-width for simpler card */
            max-height: 90vh;
            overflow-y: auto;
            box-sizing: border-box;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 10px 16px; /* reduced padding for shorter height */
            border: none;
            border-radius: 8px;
            font-size: 1rem; /* slightly smaller font */
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px; /* smaller gap */
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

            .btn-danger i {
                font-size: 1.3rem; /* smaller icon */
            }

        .back-link {
            display: inline-flex;
            text-align: center;
            margin-top: 15px; /* slightly smaller margin */
            background-color: #000;
            color: #fff;
            text-decoration: none;
            padding: 10px 16px; /* reduced padding */
            border-radius: 8px;
            font-size: 1rem; /* smaller font */
            transition: background-color 0.3s ease;
            align-items: center;
            justify-content: center;
            gap: 8px; /* smaller gap */
            max-width: 220px;
            margin-left: auto;
            margin-right: auto;
            font-weight: 600;
        }

            .back-link:hover {
                background-color: #333;
                text-decoration: none;
            }

            .back-link i {
                font-size: 1.3rem; /* smaller icon */
            }

    </style>
</head>
<body>
    <div class="form-card" role="main" aria-labelledby="delete-title">
        <h1 id="delete-title">
            <i class="fas fa-trash-alt"></i> Delete Menu Item
        </h1>
        <h3>Are you sure you want to delete this?</h3>

        <dl>
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>

            <dt>@Html.DisplayNameFor(model => model.Price)</dt>
            <dd>@Html.DisplayFor(model => model.Price)</dd>

            @if (!string.IsNullOrEmpty(Model.Image_Url))
            {
                <dt>@Html.DisplayNameFor(model => model.Image_Url)</dt>
                <dd><img src="@Model.Image_Url" alt="Menu Item Image" /></dd>
            }

            <dt>@Html.DisplayNameFor(model => model.Availability)</dt>
            <dd>@Html.DisplayFor(model => model.Availability)</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Menu_Item_Id" />
            <button type="submit" class="btn-danger" aria-label="Confirm delete menu item">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
        </form>

        <a asp-action="Index" asp-controller="Admin" class="back-link" aria-label="Back to menu item list">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</body>
</html>
