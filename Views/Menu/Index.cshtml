<div class="container-fluid p-4">
    <h5 class="mb-3">Menu Items</h5>

    <a href="@Url.Action("Create", "Menu")" class="btn btn-primary mb-4">
        <i class="fas fa-plus"></i> Add New Item
    </a>

    <div class="mb-4 position-relative">
        <input type="text" id="menuSearch" class="form-control ps-5" placeholder="Search for menu items..." />
        <i class="fas fa-search position-absolute" style="top: 50%; left: 15px; transform: translateY(-50%); font-size: 18px; color: #ccc;"></i>
    </div>

    <div class="row">
        @foreach (var item in Model.MenuItems)
        {
            <div class="col-md-4 mb-4" data-name="@item.Name.ToLower()">
                <div class="card h-100 shadow-sm d-flex flex-column">
                    <div class="img-hover-wrapper position-relative">
                        <img src="@item.Image_Url" class="card-img-top" style="height: 150px; object-fit: cover;" alt="@item.Name" />
                        <div class="overlay-buttons d-flex align-items-center justify-content-center">
                            <a href="@Url.Action("Edit", "Menu", new { id = item.Menu_Item_Id })" class="btn btn-sm btn-warning mx-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", "Menu", new { id = item.Menu_Item_Id })" class="btn btn-sm btn-danger mx-1">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                            <a href="@Url.Action("Details", "Menu", new { id = item.Menu_Item_Id })" class="btn btn-sm btn-info mx-1">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">@item.Name</h6>
                        <p class="text-muted" style="font-size: 14px;">@item.Description</p>
                        <p><strong>₹@item.Price</strong></p>
                        <p>
                            @if (item.Availability)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Unavailable</span>
                            }
                        </p>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Optional search filter
        document.getElementById('menuSearch').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            document.querySelectorAll('[data-name]').forEach(el => {
                el.style.display = el.getAttribute('data-name').includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}

<style>
    .img-hover-wrapper {
        position: relative;
        overflow: hidden;
    }

    .overlay-buttons {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.75);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
        z-index: 1;
    }

    .img-hover-wrapper:hover .overlay-buttons {
        opacity: 1;
    }

    .card-img-top {
        transition: transform 0.3s ease;
    }

    .img-hover-wrapper:hover .card-img-top {
        transform: scale(1.02);
    }

    .overlay-buttons a {
        margin-right: 10px; /* Optional space between buttons */
    }
</style>
