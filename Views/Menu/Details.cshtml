@model EchoPOS.Models.Menu

@{
    ViewData["Title"] = "Menu Item Details";
    Layout = null; // Use your shared layout if available
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- Bootstrap & FontAwesome CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<!-- Page Style -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 1rem;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

    .btn-dark {
        background-color: #212529;
        border: none;
    }

        .btn-warning:hover,
        .btn-dark:hover {
            opacity: 0.9;
        }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 850px; width: 100%;">
        <h2 class="text-center mb-4">
            <i class="fas fa-info-circle me-2"></i> <!-- Info icon before title -->
            Menu Item Details
        </h2>
        <hr />

        <div class="row g-4">
            <div class="col-md-4 text-center">
                <img src="@Model.Image_Url" alt="@Model.Name" class="img-fluid rounded shadow-sm" />
            </div>
            <div class="col-md-8">
                <h4>@Model.Name</h4>
                <p class="text-muted">@Model.Description</p>
                <p><strong>Price:</strong> ₹@Model.Price</p>
                <p>
                    <strong>Status:</strong>
                    @if (Model.Availability)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Unavailable</span>
                    }
                </p>
                <p><strong>Category ID:</strong> @Model.Category_Id</p>

                <div class="mt-4 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Menu_Item_Id" class="btn btn-warning text-dark">
                        <i class="fas fa-edit me-1"></i> Edit
                    </a>
                    <a asp-action="Index" asp-controller="Admin" class="btn btn-dark text-white">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap & Popper.js Scripts -->
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
