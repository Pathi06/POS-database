@model IEnumerable<EchoPOS.Models.Suppliers>

@{
    ViewData["Title"] = "Suppliers List";
}

<h2 class="text-center mt-4">Suppliers List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Supplier</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Supplier_Id</td>
                <td>@supplier.Name</td>
                <td>@supplier.Contact</td>
                <td>@supplier.Email</td>
                <td>@supplier.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@supplier.Supplier_Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@supplier.Supplier_Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@supplier.Supplier_Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
