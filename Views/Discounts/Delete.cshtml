@model EchoPOS.Models.Discounts

@{
    ViewData["Title"] = "Delete Discount";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #dc3545, #007bff);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            /* Flexbox centering */
            display: flex;
            justify-content: center; /* horizontal center */
            align-items: center; /* vertical center */
            height: 100vh; /* full viewport height */
        }


        .card {
            max-width: 500px;
            margin: auto;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-group-custom {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        @@media (max-width: 576px) {
            .btn-group-custom

        {
            flex-direction: column;
            gap: 10px;
        }

        .btn-group-custom button,
        .btn-group-custom a {
            width: 100%;
        }

        }
    </style>
</head>
<body>
    <div class="card">
        <h2>Delete Discount</h2>

        <p class="text-center">Are you sure you want to delete the discount: <strong>@Model.Name</strong>?</p>

        <form asp-action="Delete" asp-route-id="@Model.Discount_Id" method="post">
            <div class="btn-group-custom">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
