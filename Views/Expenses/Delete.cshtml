@model EchoPOS.Models.Expenses
@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container mt-4">
    <h3>Delete Expense</h3>

    <div class="alert alert-danger">
        Are you sure you want to delete this expense?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">₹@Model.Amount</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.Note</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
