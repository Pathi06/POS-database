@model EchoPOS.Models.Expenses
@{
    ViewData["Title"] = "Edit Expenses";
}

<div class="container mt-4">
    <h3>Edit Expense</h3>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Category</label>
            <input asp-for="Category" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Amount (₹)</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" required />
        </div>
        <div class="form-group">
            <label>Date</label>
            <input asp-for="Date" class="form-control" type="date" required />
        </div>
        <div class="form-group">
            <label>Note</label>
            <input asp-for="Note" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
