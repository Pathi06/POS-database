@model EchoPOS.Models.Expenses
@{
    ViewData["Title"] = "Add Expense";
}

<div class="container mt-4">
    <h3>Add New Expense</h3>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Category</label>
            <input asp-for="Category" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Amount (₹)</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" required />
        </div>
        <div class="form-group">
            <label>Date</label>
            <input asp-for="Date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="form-group">
            <label>Note</label>
            <input asp-for="Note" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
