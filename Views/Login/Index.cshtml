@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #1a2a6c, #b21f1f);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: white;
        }

        .login-card {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 500px;
        }

            .login-card h4 {
                color: #b21f1f;
                font-weight: 700;
                text-align: center;
                margin-bottom: 30px;
            }

        .form-label i {
            margin-right: 8px;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            background-color: #b21f1f;
            border: none;
            border-radius: 10px;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #941a1a;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            border-radius: 10px;
            font-weight: 600;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="login-card">
            <h4><i class="bi bi-shield-lock-fill me-2"></i>Echo POS</h4>
            <form asp-action="Index" method="post">
                <div class="mb-4">
                    <label for="Username" class="text-dark"><i class="bi bi-person-fill"></i>Username</label>
                    <input type="text" class="form-control text-dark" id="Username" name="Username" placeholder="Enter your Username" required />
                </div>
                <div class="mb-4">
                    <label for="Password" class="text-dark"><i class="bi bi-lock-fill"></i>Password</label>
                    <input type="password" class="form-control text-dark" id="Password" name="Password" placeholder="Enter your Password" required />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                </div>x`x`
            </form>
        </div>
    </div>
</body>
</html>
