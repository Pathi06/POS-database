@model IEnumerable<EchoPOS.Models.Tables>

@{
    ViewData["Title"] = "Tables";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />


    <!-- Bootstrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .table-card {
            transition: all 0.3s ease-in-out;
        }

            .table-card:hover {
                transform: scale(1.03);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            }

        .border-Available {
            border-left: 5px solid #28a745;
        }

        .border-Occupied {
            border-left: 5px solid #dc3545;
        }

        .border-Reserved {
            border-left: 5px solid #ffc107;
        }

        .border-Default {
            border-left: 5px solid #6c757d;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="card-title mb-3">
            <i class="bi bi-table me-2"></i> Table
        </h2>

        <div class="row">
            @foreach (var item in Model)
            {
                var borderClass = item.Status switch
                {
                    "Available" => "border-Available",
                    "Occupied" => "border-Occupied",
                    "Reserved" => "border-Reserved",
                    _ => "border-Default"
                };

                // Choose status icon and color
                var (statusIcon, statusColorClass) = item.Status switch
                {
                    "Available" => ("bi-check-circle-fill", "text-success"),
                    "Occupied" => ("bi-x-circle-fill", "text-danger"),
                    "Reserved" => ("bi-clock-fill", "text-warning"),
                    _ => ("bi-question-circle-fill", "text-secondary")
                };

                <div class="col-md-4 col-lg-3 mb-4">
                    <!-- Hidden Form -->
                    <form id="form-@item.Table_Id" method="post" action="@Url.Action("Index", "POS_")" style="display: none;">
                        <input type="hidden" name="Table_Id" value="@item.Table_Id" />
                    </form>

                    <!-- Clickable Card -->
                    <div class="card h-100 shadow-sm table-card @borderClass" data-table-id="@item.Table_Id" style="cursor: pointer;">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-3">
                                <i class="bi bi-table"></i> Table @item.Table_Number
                            </h5>
                            <p class="mb-2">
                                <i class="bi bi-hash text-secondary"></i> <strong>ID:</strong> @item.Table_Id
                            </p>
                            <p class="mb-2">
                                <i class="bi bi-people-fill text-primary"></i> <strong>Capacity:</strong> @item.Capacity
                            </p>
                            <p class="mb-2">
                                <i class="bi @statusIcon @statusColorClass"></i> <strong>Status:</strong> @item.Status
                            </p>
                            <p class="text-muted mb-0">
                                <i class="bi bi-geo-alt-fill text-info"></i> <strong>Location:</strong> @item.Location
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.querySelectorAll('.table-card').forEach(card => {
            card.addEventListener('click', function () {
                const tableId = this.getAttribute('data-table-id');
                const form = document.getElementById('form-' + tableId);
                if (form) form.submit();
            });
        });
    </script>
</body>
</html>
