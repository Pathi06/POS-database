@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Menu Items</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        .img-hover-wrapper {
            position: relative;
            overflow: hidden;
        }

        .overlay-buttons {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.75);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
            z-index: 1;
        }

        .img-hover-wrapper:hover .overlay-buttons {
            opacity: 1;
        }

        .card-img-top {
            transition: transform 0.3s ease;
        }

        .img-hover-wrapper:hover .card-img-top {
            transform: scale(1.02);
        }

        .card {
            flex: 1 1 300px;
            max-width: 300px;
            min-width: 100px;
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
            background-color: white;
            border-radius: 8px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .card-title i,
        .text-muted i,
        .price-icon,
        .availability-icon {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-4">
        <!-- Title with Icon -->
        <h5 class="mb-3">
            <i class="fas fa-list-alt me-2 text-dark"></i> Menu Items
        </h5>

        <!-- Search bar with icon -->
        <div class="mb-4 position-relative">
            <input type="text" id="menuSearch" class="form-control ps-5" placeholder="Search for menu items..." style="font-size: 16px; padding-left: 35px;" />
            <i class="fas fa-search position-absolute" style="top: 50%; left: 15px; transform: translateY(-50%); font-size: 18px; color: #ccc;"></i>
        </div>

        <!-- Menu cards -->
        <div class="row">
            @foreach (var item in Model.MenuItems)
            {
                <div class="col-md-4 mb-4" data-name="@item.Name.ToLower()">
                    <div class="card h-100 shadow-sm d-flex flex-column">
                        <div class="img-hover-wrapper position-relative">
                            <img src="@item.Image_Url" class="card-img-top" style="height: 150px; object-fit: cover;" alt="@item.Name" />
                            <div class="overlay-buttons d-flex flex-column align-items-center justify-content-center">
                                <a href="@Url.Action("Edit", "Menu", new { id = item.Menu_Item_Id })" class="btn btn-sm btn-warning mb-1">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">
                                <i class="fas fa-utensils text-primary"></i> @item.Name
                            </h6>
                            <p class="text-muted" style="font-size: 14px;">
                                <i class="fas fa-info-circle text-secondary"></i> @item.Description
                            </p>
                            <p>
                                <i class="fas fa-tag text-success"></i> <strong>₹@item.Price</strong>
                            </p>
                            <p>
                                @if (item.Availability)
                                {
                                    <i class="fas fa-check-circle text-success me-1 availability-icon"></i>
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle text-danger me-1 availability-icon"></i>
                                    <span class="badge bg-danger">Unavailable</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Search filter functionality
        document.getElementById('menuSearch').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            document.querySelectorAll('[data-name]').forEach(el => {
                el.style.display = el.getAttribute('data-name').includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
