@model IEnumerable<EchoPOS.Models.Order_Items>

@{
    ViewBag.Title = "Ready Order Items";
    Layout = null;  // Remove if you want to use your site-wide _Layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .card:hover {
            transform: scale(1.02);
            transition: 0.3s ease-in-out;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .status-badge {
            font-size: 0.85rem;
            padding: 0.4em 0.6em;
            border-radius: 0.5rem;
        }

        .btn-outline-success:hover {
            background-color: #198754;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">
            <i class="bi bi-list-check me-2"></i>Ready Order Items
        </h2>

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4" id="order-item-@item.Order_Item_Id">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="bi bi-basket-fill me-2"></i>@item.Menu_Item_Name
                                </h5>

                                <p class="mb-1">
                                    <i class="bi bi-123 me-1 text-primary"></i>
                                    <strong>Quantity:</strong> @item.Quantity
                                </p>
                                <p class="mb-1">
                                    <i class="bi bi-table me-1 text-warning"></i>
                                    <strong>Table:</strong> @item.Table_Number
                                </p>
                                <p class="mb-1">
                                    <i class="bi bi-info-circle me-1 text-success"></i>
                                    <strong>Status:</strong>
                                    <span class="badge bg-success status-badge">@item.Order_Item_Status</span>
                                </p>
                                <p class="mb-1">
                                    <i class="bi bi-chat-left-text me-1 text-secondary"></i>
                                    <strong>Note:</strong> @item.Special_Instructions
                                </p>
                                <p class="mb-0 text-muted">
                                    <i class="bi bi-clock-history me-1"></i>
                                    <small>Last Updated: @item.Updated_At?.ToString("g")</small>
                                </p>

                                <div class="text-end mt-2">
                                    <button class="btn btn-sm btn-outline-success" onclick="completeOrder(@item.Order_Item_Id)">
                                        <i class="bi bi-check2-circle me-1"></i>Complete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">
                <i class="bi bi-emoji-frown me-1"></i>No ready order items found.
            </p>
        }
    </div>

    <!-- jQuery (required for your AJAX) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Bundle JS (Popper included) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function completeOrder(orderItemId) {
            console.log("Completing Order Item with ID: " + orderItemId);

            $.ajax({
                url: '@Url.Action("MarkOrderCompleted", "Waiter")',
                type: 'POST',
                data: { orderItemId: orderItemId },
                success: function (response) {
                    console.log(response);
                    if (response.success) {
                        $('#order-item-' + orderItemId).fadeOut(300, function () {
                            $(this).remove();
                        });
                    } else {
                        alert("Error completing the order: " + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error occurred: ", error);
                    alert("An error occurred while completing the order.");
                }
            });
        }
    </script>
</body>
</html>
