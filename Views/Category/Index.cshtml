@model IEnumerable<EchoPOS.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<h1 class="text-center">Category</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <!-- Make entire card clickable -->
                <a href="javascript:void(0);" onclick="loadMenu(@item.Category_Id);" class="text-decoration-none">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                    </div>
                </a>

                <!-- Action Buttons -->
                <div class="card-footer text-center">
                    <a asp-action="Details" asp-route-id="@item.Category_Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@item.Category_Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Category_Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function loadMenu(categoryId) {
            $.ajax({
                url: '/Menu/GetMenuByCategory',
                type: 'GET',
                data: { categoryId: categoryId },
                success: function (data) {
                    $('#menuItems').html(data);
                },
                error: function (xhr, status, error) {
                    console.error('AJAX error:', xhr.responseText);
                    alert('Failed to load menu items.');
                }
            });
        }
    </script>
}
