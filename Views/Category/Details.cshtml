@model EchoPOS.Models.Category

@{
    ViewData["Title"] = "Category Details";
    Layout = null;
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .card {
        max-width: 600px;
        width: 100%;
        border-radius: 1rem;
        padding: 30px;
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-black {
        background-color: black;
        color: white;
    }

        .btn-black:hover {
            background-color: #333;
            color: white;
        }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm bg-white">
        <h2><i class="bi bi-eye-fill me-2 text-primary"></i> View Category</h2>

        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Description:</strong> @Model.Description</p>

        <div class="d-grid gap-2 mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Category_Id" class="btn btn-success">
                <i class="bi bi-pencil-square me-1"></i> Edit Category
            </a>
            <a asp-action="Index" asp-controller="Admin" class="btn btn-black">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
